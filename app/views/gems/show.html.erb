<%= render 'search_form' %>

<div class='row'>
  <div class='span4 well'>
    <h6 class='page-header'>Description</h6>
    <dl class='dl-horizontal'>
      <dt>Name:</dt>
      <dd><%= @gem_info.name%></dd>
      <dt>Version:</dt>
      <dd><%= @gem_info.version %></dd>
      <dt>Authors:</dt>
      <dd><%= @gem_info.authors%></dd>
      <dt>Downloads:</dt>
      <dd><%= number_with_delimiter(@gem_info.downloads, :delimiter => ' ') %></dd>
      <%= urls(@gem_info) %>
    </dl>
    <p><%= @gem_info.info %></p>
  </div>
  <div class='span3 well'>
    <h6 class='page-header'>Runtime environment</h6>
    <%= gems_info(@gem_info.runtime_dependencies, 'Dependencies') %>
    <%= gems_info(@gem_info.runtime_dependents, 'Dependent gems') %>
  </div>
  <div class='span3 well'>
    <h6 class='page-header'>Development environment</h6>
    <%= gems_info(@gem_info.development_dependencies, 'Dependencies') %>
    <%= gems_info(@gem_info.development_dependents, 'Dependent gems') %>
  </div>
</div>
