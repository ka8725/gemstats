<%= render 'search_form' %>

<div class='row'>
  <div class='span4'>
    <dl class='dl-horizontal'>
      <dt>Name:</dt>
      <dd><%= @gem_info.name%></dd>
      <dt>Version:</dt>
      <dd><%= @gem_info.version %></dd>
      <dt>Authors:</dt>
      <dd><%= @gem_info.authors%></dd>
      <dt>Downloads:</dt>
      <dd><%= @gem_info.downloads %></dd>
    </dl>
    <p><%= @gem_info.info %></p>
  </div>
  <div class='span4'>
    <strong>Runtime environment</strong>
    <%= gems_info(@gem_info.runtime_dependencies, 'Dependencies') %>
    <%= gems_info(@gem_info.runtime_dependents, 'Dependent gems') %>
  </div>
  <div class='span4'>
    <strong>Development environment</strong>
    <%= gems_info(@gem_info.development_dependencies, 'Dependencies') %>
    <%= gems_info(@gem_info.development_dependents, 'Dependent gems') %>
  </div>
</div>
