<%= form_tag('/gems', :method => :get) do %>
  <%= text_field_tag :name, @gem_info.name %>
  <%= submit_tag %>
<% end %>

<% if @gem_info.persisted? %>
  <dl>
   <dd>Gem name:</dd>
    <dt><%= @gem_info.name %></dt>
   <dd>Downloads Number:</dd>
    <dt><%= @gem_info.downloads %></dt>
   <dd>Gems who uses this gem in runtime environment:</dd>
    <dt><%= clients(@gem_info.name) %></dt>
   <dd>Total:</dd>
    <dt><%= clients(@gem_info.name).count %></dt>
   <dd>Gems who uses this gem in development environment:</dd>
    <dt><%= clients(@gem_info.name, :development) %></dt>
   <dd>Total:</dd>
    <dt><%= clients(@gem_info.name, :development).count %></dt>
  </dl>
<% end %>
