<div class='hero-unit'>
  <header class='page-header'>
    <h2>Do you want to know who uses your gem?</h2>
  </header>
  <%= form_tag('/gems', :method => :get, :class => 'form-horizontal') do %>
    <%= text_field_tag :name, @gem_info.name, :placeholder => 'Type gem name here', :class => 'big-field' %>
    <%= submit_tag 'Submit', :class => 'btn btn-large btn-primary' %>
  <% end %>
</div>

<% if @gem_info.persisted? %>
  <table class='table'>
    <thead>
      <tr>
        <th>Gem</th>
        <th colspan='2'>Runtime environment</th>
        <th colspan='2'>Development environment</th>
      </tr>
    </thead>
    <tbody>
      <tr title='<%= @gem_info.info %>'>
        <td>
          <dl class='dl-horizontal'>
            <dt>Name:</dt>
            <dd><%= @gem_info.name%></dd>
            <dt>Version:</dt>
            <dd><%= @gem_info.version %></dd>
            <dt>Authors:</dt>
            <dd><%= @gem_info.authors%></dd>
            <dt>Downloads:</dt>
            <dd><%= @gem_info.downloads %></dd>
          </dl>
        </td>
        <%= gems_info(@gem_info.runtime_dependencies, 'Dependencies') %>
        <%= gems_info(clients(@gem_info.name), 'Dependent gems') %>
        <%= gems_info(@gem_info.development_dependencies, 'Dependencies') %>
        <%= gems_info(clients(@gem_info.name, :development), 'Dependent gems') %>
      </tr>
    </tbody>
  </table>
<% end %>
