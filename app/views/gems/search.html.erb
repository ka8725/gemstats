<%= render 'search_form' %>

<% if @gems.present? %>
  <h2>Results for search query</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Downloads</th>
        <th>Version</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @gems.each do |g| %>
        <tr>
          <td><%= link_to g.name, gem_path(g) %></td>
          <td><%= number_with_delimiter(g.downloads, :delimiter => ' ') %></td>
          <td><%= g.version %></td>
          <td><%= g.info %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>No results found</h2>
<% end %>
