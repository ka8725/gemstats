<div class='search-container'>
  <%= form_tag search_path, :method => :get, :class => 'form-search form-inline' do %>
    <h2>Do you want to know who uses your gem?</h2>
    <div class='well'>
      <%= search_field_tag :q, params[:q], :placeholder => 'Type gem name here...', :class => 'input-medium search-query' %>
      <%= button_tag :class => 'btn btn-large btn-inverse search', :name => nil do %>
        <i class='icon-search icon-white'></i>
      <% end %>
      <div class='clearfix'></div>
    </div>
    <%= yield(:likes) %>
  <% end %>
</div>
